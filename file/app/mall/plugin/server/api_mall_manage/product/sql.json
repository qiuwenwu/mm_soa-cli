{
    "name": "mall_product2",
    "title": "商品信息",
    "table": "mall_product",
    "key": "product_id",
    "orderby_default": "`product_id` desc",
    "field_obj": "`product_id`,`available`,`state`,`type_id`,`channel_id`,`shop_id`,`group_id`,`city_id`,`hot`,`praise`,`sales`,`price`,`price_ago`,`title`,`keywords`,`description`,`tag`,`img`,`content`,`collecter`,`brand`",
    "field_default": "`product_id`,`available`,`state`,`type_id`,`display`,`channel_id`,`shop_id`,`group_id`,`city_id`,`hot`,`praise`,`sales`,`price`,`price_ago`,`time_create`,`time_update`,`title`,`keywords`,`description`,`tag`,`brand`",
    "query": {
        "state_min": "`state` >= {0}",
        "state_max": "`state` <= {0}",
        "display_min": "`display` >= {0}",
        "display_max": "`display` <= {0}",
        "hot_min": "`hot` >= {0}",
        "hot_max": "`hot` <= {0}",
        "praise_min": "`praise` >= {0}",
        "praise_max": "`praise` <= {0}",
        "sales_min": "`sales` >= {0}",
        "sales_max": "`sales` <= {0}",
        "price_min": "`price` >= {0}",
        "price_max": "`price` <= {0}",
        "price_ago_min": "`price_ago` >= {0}",
        "price_ago_max": "`price_ago` <= {0}",
        "time_create_min": "`time_create` >= '{0}'",
        "time_create_max": "`time_create` <= '{0}'",
        "time_update_min": "`time_update` >= '{0}'",
        "time_update_max": "`time_update` <= '{0}'",
        "title": "`title` like '%{0}%'",
        "keywords": "`keywords` like '%{0}%'",
        "description": "`description` like '%{0}%'",
        "tag": "`tag` like '%{0}%'",
        "img": "`img` like '%{0}%'",
        "content": "`content` like '%{0}%'",
        "collecter": "`collecter` like '%{0}%'",
        "brand": "`brand` like '%{0}%'",
        "keyword": "(`title` like '%{0}%' || `keywords` like '%{0}%' || `description` like '%{0}%' || `tag` like '%{0}%')"
    },
    "update": {
        "state_add": "`state` = `state` + {0}",
        "display_add": "`display` = `display` + {0}",
        "hot_add": "`hot` = `hot` + {0}",
        "praise_add": "`praise` = `praise` + {0}",
        "sales_add": "`sales` = `sales` + {0}",
        "price_add": "`price` = `price` + {0}",
        "price_ago_add": "`price_ago` = `price_ago` + {0}"
    },
    "format": [
        {
            "key": "available",
            "title": "是否启用",
            "list": [
                "否",
                "是"
            ]
        },
        {
            "key": "state",
            "title": "状态",
            "list": [
                "",
                "出售中",
                "预售中",
                "已下架",
                "已删除",
                "已违规"
            ]
        },
        {
            "key": "type_id",
            "title": "产品分类",
            "table": "mall_product_type",
            "name": "name"
        },
        {
            "key": "channel_id",
            "title": "频道",
            "table": "mall_product_channel",
            "name": "name"
        },
        {
            "key": "shop_id",
            "title": "店铺",
            "table": "mall_shop",
            "name": "name"
        },
        {
            "key": "group_id",
            "title": "分组",
            "table": "mall_product_group",
            "name": "name"
        },
        {
            "key": "city_id",
            "title": "所属城市",
            "table": "sys_address_city",
            "name": "name"
        }
    ],
    "field_hide": []
}